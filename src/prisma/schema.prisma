model Patient {
    id          String                     @id @default(uuid())
    email       String                     @unique
    password    String
    firstName   String
    lastName    String
    imageURL    String
    appointment AppointmentPatientDoctor[]
}

model Doctor {
    id           String                     @id @default(uuid())
    email        String                     @unique
    spesialisasi Specialization
    password     String
    firstName    String
    lastName     String
    imageURL     String
    appointment  AppointmentPatientDoctor[]
}

model AppointmentPatientDoctor {
    patient   Patient  @relation(fields: [patientID], references: [id])
    patientID String
    doctor    Doctor   @relation(fields: [doctorID], references: [id])
    doctorID  String
    datetime  DateTime
    status    Status

    @@id([patientID, doctorID])
}

enum Specialization {
    Umum
    Jantung
    Kulit
    Lambung
    Darah
}

enum Status {
    Pending
    Submitted
    Accepted
    Rejected
    Done
}
